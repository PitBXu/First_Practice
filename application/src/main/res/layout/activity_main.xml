<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/relativeLayout"
        android:background="#af0505"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/topright"
            android:id="@+id/imageView3"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:text="一卡中国"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textColor="#ffffff"
            android:id="@+id/textView3"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:inputType="textPersonName"
            android:hint="请输入内容"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:background="@drawable/input"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3" />

        <TextView
            android:text="搜索"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toRightOf="@+id/editText"
            android:layout_toEndOf="@+id/editText"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp" />
    </RelativeLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/line1"
        android:background="#e7dcda"
        android:layout_height="60dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="45dp"
            android:layout_weight="1"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                app:srcCompat="@drawable/nicefood"
                android:id="@+id/imageView7"
                android:layout_weight="1" />
            <TextView
                android:text="美食"
                android:layout_width="wrap_content"
                android:layout_marginLeft="71dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="45dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/playfun"
                android:id="@+id/imageView8"
                android:layout_weight="1" />
            <TextView
                android:text="娱乐"
                android:layout_width="wrap_content"
                android:layout_marginLeft="53dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="45dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                app:srcCompat="@drawable/service"
                android:id="@+id/imageView9"
                android:layout_weight="1" />
            <TextView
                android:text="生活"
                android:layout_width="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/line2"
        android:background="#e7dcda"
        android:layout_height="60dp"
        android:layout_below="@+id/line1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="45dp"
            android:layout_weight="1"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                app:srcCompat="@drawable/buythg"
                android:id="@+id/imageView4"
                android:layout_weight="1" />
            <TextView
                android:text="购物"
                android:layout_width="wrap_content"
                android:layout_marginLeft="71dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="45dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/paymoney"
                android:id="@+id/imageView5"
                android:layout_weight="1" />
            <TextView
                android:text="支付"
                android:layout_width="wrap_content"
                android:layout_marginLeft="53dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="45dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                app:srcCompat="@drawable/newcategory"
                android:id="@+id/imageView6"
                android:layout_weight="1" />
            <TextView
                android:text="商家"
                android:layout_width="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_below="@+id/line2"
        android:layout_above="@+id/line3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:background="#000000"
        android:layout_width="match_parent"
        android:id="@+id/line3"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:srcCompat="@drawable/shouye_on"
                android:id="@+id/imageView2" />

            <TextView
                android:text="首页"
                android:textColor="#ffffff"
                android:layout_marginLeft="50dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:srcCompat="@drawable/newcar"
                android:id="@+id/imageView10" />

            <TextView
                android:text="购物车"
                android:textColor="#ffffff"
                android:layout_marginLeft="40dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:srcCompat="@drawable/ic_menu_more_off"
                android:id="@+id/imageView11" />

            <TextView
                android:text="更多"
                android:textColor="#ffffff"
                android:layout_marginLeft="50dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView12" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>